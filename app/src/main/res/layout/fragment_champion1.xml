<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".fragment.Champion1Fragment">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <ImageView
                    android:id="@+id/imgChampion"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/item_adapter"
                    android:src="@mipmap/sufer2"
                    android:foreground="?android:attr/selectableItemBackground" />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_adapter"
                    android:paddingLeft="16dp"
                    android:paddingTop="2dp"
                    android:paddingRight="16dp"
                    android:layout_marginBottom="5dp"
                    android:paddingBottom="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Description"
                        android:paddingVertical="10dp"
                        android:layout_weight="1"
                        android:textColor="@color/title"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="16dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:background="@drawable/item_adapter"
                    android:layout_marginHorizontal="5dp">

                    <TextView
                        android:id="@+id/txtDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Located two hours south of Sydney in the Southern Highlands of New South Wales, ..."
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                    
                    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:stretchColumns="1">


                        <TableRow
                            android:layout_margin="1dp"
                            android:background="@color/grey_200">

                            <TextView
                                android:layout_column="0"
                                android:padding="5dip"
                                android:text="Date/time"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/txtDateTime"
                                android:layout_marginLeft="10dp"
                                android:autoLink="phone"
                                android:padding="3dp"
                                android:text="12/12/2019 - 12:20"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_column="0"
                                android:padding="3dip"
                                android:text="Category"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/txtCategory"
                                android:layout_marginLeft="10dp"
                                android:padding="3dp"
                                android:text="open"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </TableRow>

                        <TableRow
                            android:layout_margin="1dp"
                            android:background="@color/grey_200">

                            <TextView
                                android:layout_column="0"
                                android:padding="3dip"
                                android:text="Waves"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/txtWaves"
                                android:layout_marginLeft="10dp"
                                android:padding="3dp"
                                android:text="10"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_column="0"
                                android:padding="3dip"
                                android:text="Place"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/txtPlace"
                                android:layout_marginLeft="10dp"
                                android:padding="3dp"
                                android:text="Barra Beach"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </TableRow>

                        <TableRow
                            android:layout_margin="1dp"
                            android:background="@color/grey_200"/>

                    </TableLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="16dp"
                    android:paddingTop="2dp"
                    android:paddingRight="16dp"
                    android:layout_marginBottom="5dp"
                    android:paddingBottom="2dp">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Judges"
                        android:paddingVertical="10dp"
                        android:layout_weight="1"
                        android:textColor="@color/title"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="2dp"
                    android:paddingRight="16dp"
                    android:layout_marginBottom="20dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/item_adapter"
                    android:layout_marginHorizontal="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="1-"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="25dp"
                        android:layout_height="50dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Brazil"
                            android:textColor="@color/black"
                            android:layout_marginVertical="3dp"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Me"
                            android:textColor="@color/title"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="16dp"
                    android:paddingTop="2dp"
                    android:paddingRight="16dp"
                    android:layout_marginBottom="5dp"
                    android:paddingBottom="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Results"
                        android:paddingVertical="10dp"
                        android:layout_weight="1"
                        android:textColor="@color/title"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/red"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/item_adapter"
                    android:layout_marginHorizontal="5dp">

                    <View
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingLeft="25dp"
                        android:paddingRight="16dp"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Red"
                            android:textColor="@color/black"
                            android:layout_marginVertical="3dp"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Alex Nelson"
                            android:textColor="@color/title"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/grey"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/item_adapter"
                    android:layout_marginHorizontal="5dp">

                    <View
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingLeft="25dp"
                        android:paddingRight="16dp"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Grey"
                            android:textColor="@color/black"
                            android:layout_marginVertical="3dp"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Ian Santos"
                            android:textColor="@color/title"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/item_adapter"
                    android:layout_marginHorizontal="5dp">

                    <View
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingLeft="25dp"
                        android:paddingRight="16dp"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Blue"
                            android:textColor="@color/black"
                            android:layout_marginVertical="3dp"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Thiago Silva"
                            android:textColor="@color/title"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/yellow"
                    android:background="@drawable/item_adapter"
                    android:layout_marginBottom="2dp"
                    android:layout_marginHorizontal="5dp">

                    <View
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingLeft="25dp"
                        android:paddingRight="16dp"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Yellow"
                            android:textColor="@color/black"
                            android:layout_marginVertical="3dp"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Luan Tannus "
                            android:textColor="@color/title"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
</FrameLayout>